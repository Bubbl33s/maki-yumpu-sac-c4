@model MakiYumpuSAC.Models.Pedido

@{
    ViewData["Title"] = "Revisar Solicitud";
}

<div class="d-flex justify-content-between align-items-center gap-2">
    <h4>Revisar Solicitud</h4>
    <a class="btn btn-outline-secondary" asp-action="Solicitudes">Volver</a>
</div>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de Solicitud
        </dt>
        <dd class = "col-sm-10">
            @{
                var fechaGeneracion = Model.FechaGeneracionPedido;
                @fechaGeneracion.ToString("dd/MM/yyyy")
            }
        </dd>
        <dt class = "col-sm-2">
            Entrega estimada
        </dt>
        <dd class = "col-sm-10">
            @{
                var fechaEntrega = Model.FechaGeneracionPedido;
                @fechaEntrega.ToString("dd/MM/yyyy")
            }
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoPedido)
        </dd>
        <dt class = "col-sm-2">
            Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.NombreCompletoCliente)
        </dd>
        <dt class="col-sm-2">
            Correo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.CorreoCliente)
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation.PaisCliente)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Detalles
            </th>
            <th>
                Cantidad
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DetallePedidos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DescPrenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DetallesPrenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadPrenda)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <div class="d-flex justify-content-end align-items-center gap-2">
        <form asp-action="AceptarSolicitud" method="post">
            <input type="hidden" name="id" value="@Model.IdPedido" />
            <button class="btn btn-outline-success" type="submit">Aceptar</button>
        </form>
        <form asp-action="RechazarSolicitud" method="post">
            <input type="hidden" name="id" value="@Model.IdPedido" />
            <button class="btn btn-outline-danger" type="submit">Rechazar</button>
        </form>
    </div>
</div>
