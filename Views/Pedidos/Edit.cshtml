<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPedido" />
            <div class="form-group">
                <label asp-for="FechaGeneracionPedido" class="control-label"></label>
                <input asp-for="FechaGeneracionPedido" class="form-control" />
