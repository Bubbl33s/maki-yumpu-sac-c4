@model IEnumerable<MakiYumpuSAC.Models.MaterialBase>

@{
    ViewData["Title"] = "Materiales Base";
}

<h4>Materiales Base</h4>

<p>
    <a asp-action="Create">Nuevo Material Base</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Código
            </th>
            <th>
                Descripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.IdMaterialBase)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescMaterial)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.IdMaterialBase">Actualizar</a>
                <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.IdMaterialBase">Detalles</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdMaterialBase">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
