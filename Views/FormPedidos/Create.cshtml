@model MakiYumpuSAC.Models.FormPedido

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FormPedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger"></div>
            <div class="form-group">
                <label name="NombreCompletoCliente" class="control-label">Nombres Cliente</label>
                <input name="NombreCompletoCliente" class="form-control" />
                <span asp-validation-for="NombreCompletoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="CorreoCliente" class="control-label">Correo Cliente</label>
                <input name="CorreoCliente" class="form-control" />
                <span asp-validation-for="CorreoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="PaisCliente" class="control-label">País</label>
                <input name="PaisCliente" class="form-control" />
                <span asp-validation-for="PaisCliente" class="text-danger"></span>
            </div>
            <div id="detallesContainer">
                <div class="form-group">
                    <label name="detalles[0].DescPrenda">DescPrenda</label>
                    <input name="detalles[0].DescPrenda" class="form-control" />
                </div>
                <div class="form-group">
                    <label name="detalles[0].DetallesPrenda">DetallesPrenda</label>
                    <input name="detalles[0].DetallesPrenda" class="form-control" />
                </div>
                <div class="form-group">
                    <label name="detalles[0].CantidadPrenda">CantidadPrenda</label>
                    <input name="detalles[0].CantidadPrenda" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <button type="button" id="agregarDetalle" class="btn btn-success">Agregar Detalle</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Contador para generar IDs únicos para los detalles
            var detalleCount = 1;

            // Manejar clic en el botón para agregar detalles
            $("#agregarDetalle").click(function () {
                // Crear campos para el detalle
                var detalleHtml = `
                            <div class="detalle">
                                <div class="form-group">
                                    <label>DescPrenda</label>
                                    <input name="detalles[${detalleCount}].DescPrenda" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>DetallesPrenda</label>
                                    <input name="detalles[${detalleCount}].DetallesPrenda" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>CantidadPrenda</label>
                                    <input name="detalles[${detalleCount}].CantidadPrenda" class="form-control" />
                                </div>
                            </div>`;

                // Agregar el detalle al contenedor
                $("#detallesContainer").append(detalleHtml);

                detalleCount++;
            });
        });
    </script>
}
