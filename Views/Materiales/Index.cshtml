@model IEnumerable<MakiYumpuSAC.Models.Material>

@{
    ViewData["Title"] = "Materiales";
}

<h4>Materiales</h4>

<div class="d-flex justify-content-between align-items-center mb-2">
    <a asp-action="Create">Nuevo Material</a> 
    <div class="d-flex justify-content-between align-items-center mb-2 gap-2">
        <a class="btn btn-outline-secondary" asp-controller="MaterialesBase" asp-action="Index">Materiales Base</a>
        <a class="btn btn-outline-secondary" asp-action="Inactivos">Materiales Inactivos</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Material Base
            </th>
            <th>
                ID Pantone
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hebras)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.IdMaterial)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.IdMaterialBaseNavigation.CodigoMaterial) - @Html.DisplayFor(modelItem => item.IdMaterialBaseNavigation.DescMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPantone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hebras)
            </td>
            <td>
                <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@item.IdMaterial">Actualizar</a>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdMaterial">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
